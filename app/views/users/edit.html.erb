<h1>Edit user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "fields", :locals => { :f => f } %>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<div>
  <%= image_tag(gravatar_url(@user.email))%>
  <a href="http://gravatar.com/emails">change</a>
</div>
